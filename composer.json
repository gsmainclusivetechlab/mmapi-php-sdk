{
    "name": "gsma/mmp",
    "description": "The GSMA harmonised API initiative aims to increase adoption of the mobile money API through dedicated engagement with mobile money providers and support for ecosystem vendors.",
    "type": "library",
    "require": {
        "php": ">=5.4.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "mmpsdk\\": "src/",
            "mmpsdkTest\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^0.12.99",
        "squizlabs/php_codesniffer": "^3.6",
        "mockery/mockery": "^1.4"
    },
    "scripts": {
        "fix-cs": [
            "prettier . --write",
            "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix src"
        ],
        "tests": [
            "./vendor/bin/phpunit --testdox tests"
        ]
    }
}
